<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleMovieActivity">

    <TextView
        android:id="@+id/textViewTitleYearSingleMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Title (Year)"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewGenresSingleMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="Genre, Genre, Genre"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/textViewTitleYearSingleMovie"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleYearSingleMovie" />

    <TextView
        android:id="@+id/textViewDirectorSingleMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        android:text="Director"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGenresSingleMovie" />

    <TextView
        android:id="@+id/textViewActorsSingleMovie"
        android:layout_width="371dp"
        android:layout_height="212dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Actor, Actor, Actor"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDirectorSingleMovie" />
</androidx.constraintlayout.widget.ConstraintLayout>